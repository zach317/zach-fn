{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": "./",
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@/*": ["src/components/*"],
      "#/*": ["src/common/*"],
      "images/*": ["src/images/*"],
      "utils/*": ["src/utils/*"],
      "hooks/*": ["src/hooks/*"]
    }
  },
  "exclude": ["node_modules", "webpack", "dist", "eslint.config.mjs"]
}
